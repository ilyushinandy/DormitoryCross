<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DormitoryCross.View.MainPage"
             Title="ПГУАС Общежитие">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior  IsVisible="False"/>
    </Shell.BackButtonBehavior>

        <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            >
            <Image
                Source="logo.png"
                HeightRequest="150"
                WidthRequest="150"
                Margin="10"
                Aspect="AspectFit"
                SemanticProperties.Description="ПГУАС" />

            <Button
                Text="Комнаты" 
                Clicked="GoToRoomsPageAsync"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" />

            <Button
                Text="Поиск" 
                Clicked="GoToSearchPageAsync"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" />

            <Button
                Text="Добавить студента" 
                Clicked="GoToAddStudentAsync"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" />

            <Button
                Text="Управление данными" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" 
                Clicked="GoToDataManagerPageAsync"/>

            <Button
                Text="Статистика" 
                Clicked="GoToStatisticsPageAsync"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" />

            <Button
                Text="Настройки" 
                Clicked="GoToSettingsPageAsync"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="FillAndExpand" 
                Margin="0,0,0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
